{
  "name": "mqttx",
  "description": "A Powerful and All-in-One MQTT 5.0 client toolbox for Desktop, CLI and WebSocket.",
  "author": "EMQX Team <yusf@emqx.io>",
  "homepage": "https://mqttx.app",
  "license": "Apache-2.0",
  "repository": "https://github.com/emqx/MQTTX",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "npm run generate:ui",
    "dev": "turbo run dev",
    "dev:desktop": "turbo run dev --filter @mqttx/desktop",
    "dev:web": "turbo run dev --filter @mqttx/web",
    "dev:cli": "turbo run dev --filter @mqttx/cli",
    "dev:ui": "turbo run dev --filter @mqttx/ui",
    "build": "turbo run build",
    "build:cli": "turbo run build --filter @mqttx/cli",
    "build:web": "turbo run build --filter @mqttx/web",
    "build:desktop": "turbo run build --filter @mqttx/desktop",
    "build:win": "turbo run build:win",
    "build:linux": "turbo run build:linux",
    "build:mac": "turbo run build:mac",
    "generate:ui": "turbo run generate:ui",
    "format": "prettier --write .",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "@mqttx/tsconfig": "workspace:*",
    "eslint": "^8.48.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "turbo": "latest",
    "typescript": "^4.9.5"
  },
  "packageManager": "pnpm@8.6.10"
}
