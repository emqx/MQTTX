{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["element-plus/global", "node", "mqttx", "unplugin-icons/types/vue"],
    "esModuleInterop": true
  },
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "./typed-router.d.ts",
    "./auto-imports.d.ts",
    "./components.d.ts",
    "../desktop/src/preload/index.d.ts",
    "../../packages/ui/src/**/*",
    "../../packages/types/global.d.ts"
  ],
  "exclude": ["src/**/__tests__/*"]
}
