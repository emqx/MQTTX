{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["element-plus/global", "node", "mqttx"],
    "esModuleInterop": true
  },
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "./typed-router.d.ts",
    "./components.d.ts"
  ],
  "exclude": ["src/**/__tests__/*"]
}
