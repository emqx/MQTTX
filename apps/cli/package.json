{
  "name": "@mqttx/cli",
  "version": "2.0.0-alpha.1",
  "description": "MQTTX CLI - An MQTT client for the command line",
  "author": "EMQX Team <yusf@emqx.io>",
  "license": "Apache-2.0",
  "homepage": "https://mqttx.app/cli",
  "keywords": [
    "mqtt",
    "publish/subscribe",
    "publish",
    "subscribe"
  ],
  "main": "./dist/src/index.js",
  "bin": {
    "mqttx": "./bin/index.js"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc && pkg . -o ./release/mqttx-cli"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "chalk": "~4.1.2",
    "cli-table3": "^0.6.3",
    "commander": "^9.3.0",
    "compare-versions": "^5.0.1",
    "concat-stream": "^2.0.0",
    "core-js": "^3.26.0",
    "js-yaml": "^4.1.0",
    "mqtt": "^4.3.7",
    "protobufjs": "^7.2.3",
    "pump": "^3.0.0",
    "readable-stream": "^3.6.0",
    "signale": "^1.4.0",
    "split2": "^4.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@mqttx/tsconfig": "workspace:*",
    "@types/concat-stream": "^2.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/mqttx": "workspace:*",
    "@types/node": "^17.0.43",
    "@types/pump": "^1.1.1",
    "@types/readable-stream": "^2.3.13",
    "@types/signale": "^1.4.4",
    "@types/split2": "^3.2.1",
    "@types/ws": "^8.5.3"
  },
  "pkg": {
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64",
      "node18-alpine-x64",
      "node18-linux-arm64",
      "node18-macos-arm64",
      "node18-win-arm64",
      "node18-alpine-arm64"
    ],
    "outputPath": "release",
    "scripts": [
      "dist/src/scenarios/**/*"
    ]
  }
}
